%h1= "Details about #{@application.application_name}"
%ul
  %li
    Name:
    = @application.application_name
  %li
    Author:
    = @application.author
  %li
    programming_language:
    = @application.programming_language

- unless @reports == []
  %h2 Stack Traces list:
  %table
    %thead
      %tr
        %th Application Version
        %th Issues
        %th Create Issue
        %th Details
    - @reports.each do |stack|
      %tr
        %td= stack.application_version
        - # %td= check_box_tag "Fixed", "1", stack.fixed
        %td= link_to "Issues", "#"
        %td= link_to "Create issue", "#"
        %td= link_to "Details", "#"

= link_to 'See the team members list', application_contributors_path(@application)
- unless @application.github_repository == ""
  = link_to 'See the GitHub repo', "https://github.com/#{@application.github_repository}"
  - if session[:user_id] == @application.author
    = link_to('Add github collaborators to the team', user_application_add_github_contribs_path(@application.author,
      @application,
      @github_param), method: :post)

- unless @feedbacks == []
  %h2 Feedbacks List:
  - @feedbacks.each do |f|
    %p= f.user_name
    %b Text:
    %p= f.text
    %p= f.feedback_type
    = button_to "Answer", application_new_feedback_path(@application, f.id), method: :get
    = button_to "Edit", edit_application_feedback_path(@application, f.id), method: :get if f.user_name == session[:user_id]
    = button_to "Delete", application_feedback_path(@application, f.id), method: :delete if f.user_name == session[:user_id]
    %br
