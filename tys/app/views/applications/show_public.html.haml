.container-fluid
  .row
    .col-md-12.col-md-offset-0
      .page-header
        .btn-toolbar.pull-right
          .btn-group
        %h1.text-info
          = "#{@application.application_name}"
          %small
            = "by #{@application.author}, developed in #{@application.programming_language}"
  .row
    .col-md-12.col-md-offset-0
      - @feedbacks.each do |f|
        %p= f.user_name
        Text:
        %p= f.text
        %p= f.feedback_type
        %br

      = form_tag application_feedbacks_path(@application), method: :post do

        = label_tag :text, "Text"
        %br
        = text_area_tag :text

        %br
        %br
        = label_tag :user_name, "User Name"
        = text_field_tag :user_name

        %br
        %br
        = label_tag :feedback_type, "Feedback type"
        %br
        = select_tag :feedback_type, options_for_select(["Bug Report", "Feedback"], "Bug Report"), required: true

        %br
        %br
        = label_tag :email, "Email (optional)"
        = email_field_tag :email, 'example@mail.com', required: false

        %br
        %br
        = submit_tag "Submit"
