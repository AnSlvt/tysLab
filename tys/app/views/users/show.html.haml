%h1= "Details about #{@user.name}"
%ul
  %li
    Name:
    = @user.name
  %li
    Email:
    = @user.email

- current_user.applications.each do |app|
  - unless @user.in?(app.users)
    = button_to "Invite #{@user.name} to #{app.application_name}",
      user_application_invitations_path(@user, app), method: :post
