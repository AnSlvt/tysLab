.container
  .row
    .col-md-12.col-md-offset-0
      .page-header
        .btn-toolbar.pull-right
          .btn-group
        %h1.text-info
          = "Details about #{@user.name}"
  .row
    .col-md-6
      %h3.text-info Applications
      %ul.list-group
      - unless @applications == []
        - @applications.each do |application|
          %li.list-group-item
            %span
              .btn-toolbar.pull-right
                .btn-group
                  = link_to user_application_show_public_path(application.author, application), :class => "btn btn-info btn-sm" do
                    %i.glyphicon.glyphicon-eye-open
              = application.application_name
      - else
        %li.list-group-item
          %span No applications to show
    .col-md-6
      %h3.text-info Bio
      %ul.list-group
        %li.list-group-item
          %span
            - if @user.bio && @user.bio != ''
              = @user.bio
            - else
              There isn't a bio available yet
