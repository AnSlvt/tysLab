.container
  = form_tag user_application_stack_trace_issues_path(@stack_trace.application.author, @stack_trace.application, @stack_trace), :method => :post do
    .row
      .col-md-12
        .page-header
          .btn-toolbar.pull-right
            .btn-group
              = submit_tag "Save", class: "btn btn-success"
          %h1.text-info Create a new issue
      .col-md-6
        %ul.list-group
          %li.list-group-item
            %h3.text-info
              Title
            = text_field :issue, :title, :class => 'form-control'

            %h3.text-info
              Body
            = text_area :issue, :body, value: "#{@stack_trace.error_type}\n#{@stack_trace.stack_trace_text}", class: 'form-control', rows: '10', cols: '100'
