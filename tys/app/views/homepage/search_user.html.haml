.container
  .row
    .col-md-12.col-md-offset-0
      .page-header
        .btn-toolbar.pull-right
          .btn-group
        %h1.text-info Search Results
  .row
    .col-md-6
      %h3.text-info Users
      - unless @users == []
        %ul.list-group
          - @users.each do |user|
            %li.list-group-item
              %span
                .btn-toolbar.pull-right
                  .btn-group
                    = link_to user_path(user), id: "button-user-#{user.name}", method: :get, :class => "btn btn-info btn-sm" do
                      %i.glyphicon.glyphicon-eye-open
                = user.name
      - else
        %ul.list-group
          %li.list-group-item
            %span
              .btn-toolbar.pull-right
                .btn-group
              No user found.
