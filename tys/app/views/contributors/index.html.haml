%h1= "#{@application.application_name} team members list"
%ul
  - for i in 0..(@application.users.length - 1) do
    %li
      = @application.users[i].name
      = link_to 'View profile', user_path(@application.users[i])
      - if @application.author == session[:user_id] && @application.users[i].name != session[:user_id]
        = button_to 'Remove user from team', application_contributor_path(@application,
          @application.contributors[i]), method: :delete
