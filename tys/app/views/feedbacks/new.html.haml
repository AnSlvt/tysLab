%h1 Create new feedback

= form_tag application_feedbacks_path(@application.id), method: :post do

  = label_tag :text, "Text"
  %br
  = text_area_tag :text

  %br
  %br

  = label_tag :feedback_type, "Feedback type"
  %br
  = select_tag :feedback_type, options_for_select(["Bug Report", "Feedback"], "Bug Report"), required: true

  %br
  = hidden_field_tag :user_name, session[:user_id]
  = hidden_field_tag :email, @user.email
  = hidden_field_tag :parent_id, params[:parent_id]
  %br
  %br
  = submit_tag "Submit"
