.container
  = form_tag application_feedbacks_path(@application.id), method: :post do
    .row
      .col-md-12
        .page-header
          .btn-toolbar.pull-right
            .btn-group
              = submit_tag "Send", class: "btn btn-success"
          %h1.text-info Answer
      .col-md-6
        %ul.list-group
          %li.list-group-item
            %h3.text-info
              Text
            = text_area_tag  :text, '', class: 'form-control', rows: '5', cols: '100'

            %h3.text-info
              Feedback type
            = select_tag :feedback_type, options_for_select(["Bug Report", "Feedback"], "Bug Report"), required: true

            = hidden_field_tag :user_name, session[:user_id]
            = hidden_field_tag :email, @user.email
            = hidden_field_tag :parent_id, params[:parent_id]
